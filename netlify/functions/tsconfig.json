{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "allowJs": true,
    "outDir": "../../dist/functions",
    "rootDir": ".",
    "types": ["node"]
  },
  "include": ["./**/*"],
  "exclude": ["node_modules"]
}
